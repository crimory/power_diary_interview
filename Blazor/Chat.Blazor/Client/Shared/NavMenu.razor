<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Chat.Blazor</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="seconds">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Chat stats each second
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="minutes">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Chat stats each minute
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="hours">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Chat stats each hour
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="days">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Chat stats each day
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="months">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Chat stats each month
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}